<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionBarHeight"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/ActionBarPadding"
        android:paddingRight="@dimen/ActionBarPadding" >

        <ImageButton
            android:id="@+id/close_imgBtn"
            android:layout_width="@dimen/ActionBarButtonSize"
            android:layout_height="@dimen/ActionBarButtonSize"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:background="@drawable/close_imgbtn"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/dashboard_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="仪表盘"
            android:textSize="@dimen/ActionBarTextSize" />

        <ImageButton
            android:id="@+id/connDevice_imgBtn"
            android:layout_width="@dimen/ActionBarButtonSize"
            android:layout_height="@dimen/ActionBarButtonSize"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/connDevice_tv"
            android:background="@drawable/conn_device"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/connDevice_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ActionBarButtonSize"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:text="taku"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/stop_imgBtn"
            android:layout_width="@dimen/ActionBarButtonSize"
            android:layout_height="@dimen/ActionBarButtonSize"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/stop_img" />
    </RelativeLayout>

    <!-- 添加仪表盘组 -->

    <include layout="@layout/dashboard_group" />

    <!-- 添加距离和时间TextView -->

    <include layout="@layout/distance_time_group" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/dashboard_distanceimg"
        android:contentDescription="@null" />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp">
        <SeekBar 
            android:id="@+id/currentDistance_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="3000"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/currentDistance_sb"
            android:layout_alignParentLeft="true"
            android:text="0"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/currentDistance_sb"
            android:layout_alignParentRight="true"
            android:text="3000米"/>
    </RelativeLayout>

</LinearLayout>